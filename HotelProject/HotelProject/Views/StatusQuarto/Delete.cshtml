@model HotelProject.Models.status_quarto

@{
    ViewBag.Title = "Excluir Cidade";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Excluir</h2>

<h3>Tem certeza que deseja excluir este item?</h3>
<fieldset>
    <legend></legend>

    <div class="display-label">
       <strong> ID</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.status_Id)
    </div>

    <div class="display-label">
       <strong> Descrição</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descridao)
    </div>

    <div class="display-label">
        <strong> Alugável</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FlAlugavel)
    </div>
    <br/>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Deletar" class="btn btn-primary"/> |
        @Html.ActionLink("Voltar para Lista", "Index")
    </p>
}
