@model HotelProject.Models.status_quarto

@{
    ViewBag.Title = "Editar Status";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            ID
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.status_Id)
            @Html.ValidationMessageFor(model => model.status_Id)
        </div>

        <div class="editor-label">
            Descrição
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descridao)
            @Html.ValidationMessageFor(model => model.Descridao)
        </div>

        <div class="editor-label">
           Alugável
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FlAlugavel)
            @Html.ValidationMessageFor(model => model.FlAlugavel)
        </div>
        <br/>
        <p>
            <input type="submit" value="Salvar" class="btn btn-primary"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
