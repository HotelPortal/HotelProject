@model HotelProject.Models.checkin

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<script type="text/javascript">
    var Items = new Object();
    Items.quartos = new Array();

   

    function salvar() {

        $.ajax({
            url: '@Url.Action("Edit")',
            data: { Items: getItems() },
            dataType: 'json',
            type: 'POST',
            success: function (data) {
                window.location = "..@Url.Action("Index")";
            },
        });

        }

        // Remove um endereço da grid
        function removerQuarto(key) {

            $("#GridQuarto").load('@Url.Action("RemoverQuarto")',
                {
                    form: getItems(),
                    quartoid: key
                });
        }

    function adicionarQuarto() {

        $("#GridQuarto").load('@Url.Action("AdicionarQuarto")',
        {
            form: getItems(),
            quartoid: $("#quarto_id").val(),
        });

        }

    
    


    function getItems() {

        Items = new Object();


        Items.cliente_id = $("#cliente_id").val();
        Items.Previsao = $("#dataPrevisao").val();
        Items.checkin_id = $("#checkin_Id").val();
        
        Items.quartos = new Array();

        $("input[id ='quarto']").each(function () {
            Items.quartos.push(new Object({ quarto_Id: $(this).attr("quartoId"), Descricao: $(this).attr("Descricao"), Numero: $(this).attr("Numero"), ValorDia: $(this).attr("ValorDia") }));
        });

        return JSON.stringify(Items);
    }
</script>

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

     @Html.Hidden("checkin_Id", Model.checkin_Id)
     @Html.Hidden("dataPrevisao", Model.Previsao)
    @Html.Hidden("cliente_id", Model.cliente_id)

    <fieldset>
        <legend>checkin</legend>

        <div class="editor-label">
           Nome :
        </div>
        <div class="editor-field">
            @Html.Label(Model.cliente.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Data)
        </div>
        <div class="editor-field">
            @Html.Label(Model.Data.ToString())
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Previsao)
        </div>
        <div class="editor-field">
            @Html.Label(Model.Previsao.ToString())
        </div>


        <fieldset>
            <legend>Quartos</legend>

            <div class="editor-field">
                @Html.DropDownList("quarto_id", String.Empty)
            </div>
            <p>
                <input type="button" value="Adicionar" onclick="adicionarQuarto()" />
            </p>

            <div id="GridQuarto">
                @{ Html.RenderPartial("_GridQuarto", Model); }

                <br />

            </div>

        </fieldset>


        <p>
            <input type="button" value="Salvar" onclick="salvar()" />
        </p>


    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
