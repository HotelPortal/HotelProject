@model HotelProject.Models.checkin

@{
    ViewBag.Title = "Excluir CheckIn";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Excluir</h2>

<h3>Tem certeza que deseja excluir este item?</h3>
<fieldset>
    <legend></legend>

    <div class="display-label">
        <strong>ID</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.checkin_Id)
    </div>

    <div class="display-label">
         <strong>Nome Cliente</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.cliente.Nome)
    </div>

    <div class="display-label">
         <strong>Nome Funcionário</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.funcionario.Nome)
    </div>

    <div class="display-label">
        <strong>Data</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Data)
    </div>

    <div class="display-label">
         <strong>Previsão</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Previsao)
    </div>

    <div class="display-label">
         <strong>Saída</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Saida)
    </div>

    <div class="display-label">
        <strong>Valor</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Valor)
    </div>
    <br/>
    
    <div id="GridQuarto">
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>Descrição</th>
                <th>Número</th>
                <th>Valor</th>
            </tr>
            @if (Model != null)
            {
                foreach (var quarto in Model.quartos)
                {
                <tr>
                    
                    <td>@quarto.Descricao</td>
                    <td>@quarto.Numero</td>
                    <td>@quarto.ValorDia</td>
                </tr>
                }
            }
        </table>
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Excluir" class="btn btn-primary"/> |
        @Html.ActionLink("Voltar para Lista", "Index")
    </p>
}
