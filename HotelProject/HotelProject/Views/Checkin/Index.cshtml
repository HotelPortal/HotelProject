@model IEnumerable<HotelProject.Models.checkin>

@{
    ViewBag.Title = "Check Ins";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Check Ins</h2>

<p>
    @Html.ActionLink("Novo CheckIn +", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            Nome
        </th>
        <th>
           Data Registro
        </th>
        <th>
            Previsão Saída
        </th>
        <th>
            Saída
        </th>
        <th>
            Valor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.checkin_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Previsao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Saida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @* @Html.ActionLink("Edit", "Edit", new { id=item.checkin_Id  }) |
            @Html.ActionLink("Details", "Details", new { id=item.checkin_Id  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.checkin_Id  })*@
            
            <div class="btn-group">
                    <a class="btn dropdown-toggle btn-inverse" data-toggle="dropdown" href="#">
                        Ação
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Editar", "Edit", new {  id=item.checkin_Id})</li>
                        <li>@Html.ActionLink("Detalhar", "Details", new { id=item.checkin_Id })</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Deletar", "Delete", new {  id=item.checkin_Id })</li>
                    </ul>
             </div>
        </td>
    </tr>
}

</table>
