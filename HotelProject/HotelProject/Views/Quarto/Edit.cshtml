@model HotelProject.Models.quarto

@{
    ViewBag.Title = "Editar Quarto";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            ID
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.quarto_Id)
            @Html.ValidationMessageFor(model => model.quarto_Id)
        </div>
        
        <div class="editor-label">
           Número
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Numero)
            @Html.ValidationMessageFor(model => model.Numero)
        </div>

        <div class="editor-label">
            Státus
        </div>
        <div class="editor-field">
            @Html.DropDownList("status_Id", String.Empty)
            @Html.ValidationMessageFor(model => model.status_Id)
        </div>

        <div class="editor-label">
            Descrição
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ValorDia)Diária
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ValorDia)
            @Html.ValidationMessageFor(model => model.ValorDia)
        </div>

        <p>
            <input type="submit" value="Salvar" class="btn btn-primary"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
