@model HotelProject.Models.quarto

@{
    ViewBag.Title = "Excluir Quarto";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Excluir</h2>

<h3>Tem certeza que deseja excluir este item?</h3>
<fieldset>
    <legend></legend>

    <div class="display-label">
        <strong>ID</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.quarto_Id)
    </div>
    
    <div class="display-label">
       <strong> Número</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Numero)
    </div>

    <div class="display-label">
        <strong>Státus</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.status_quarto.Descridao)
    </div>

    <div class="display-label">
       <strong> Descrição</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descricao)
    </div>

    <div class="display-label">
        <strong> Diária</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ValorDia)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Deletar" class="btn btn-primary"/> |
        @Html.ActionLink("Voltar para Lista", "Index")
    </p>
}
