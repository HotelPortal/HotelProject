@model IEnumerable<HotelProject.Models.quarto>

@{
    ViewBag.Title = "Quartos";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Quartos</h2>

<p>
    @Html.ActionLink("Novo Quarto +", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            Número
        </th>
        <th>
            Status
        </th>
        <th>
            Descrição
        </th>
        <th>
           Diária
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.quarto_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status_quarto.Descridao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorDia)
        </td>
        <td>
            @* @Html.ActionLink("Editar", "Edit", new {  id=item.quarto_Id  }) |
            @Html.ActionLink("Detalhar", "Details", new {  id=item.quarto_Id  }) |
            @Html.ActionLink("Deletar", "Delete", new {  id=item.quarto_Id })*@
            
            <div class="btn-group">
                    <a class="btn dropdown-toggle btn-inverse" data-toggle="dropdown" href="#">
                        Ação
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Editar", "Edit", new {  id=item.quarto_Id })</li>
                        <li>@Html.ActionLink("Detalhar", "Details", new { id=item.quarto_Id  })</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Deletar", "Delete", new {  id=item.quarto_Id  })</li>
                    </ul>
             </div>
        </td>
    </tr>
}

</table>
