@using BootstrapSupport
@model IEnumerable<HotelProject.Models.cliente>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Novo Cliente +", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            Nome
        </th>
        <th>
            Telefone
        </th>
        <th>
            CPF
        </th>
        <th>
            E-mail
        </th>
        <th>
            Cidade
        </th>
        <th>
            Endereço
        </th>
        <th>
            Bairro
        </th>
        <th>
            Sexo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cliente_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cidade.Descricao)
        </td>  
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bairro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>
        <td>
           @* @Html.ActionLink("Editar", "Edit", new {  id=item.cliente_id }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.cliente_id  }) |
            @Html.ActionLink("Deletar", "Delete", new {  id=item.cliente_id  })
            *@
            
            <div class="btn-group">
                    <a class="btn dropdown-toggle btn-inverse" data-toggle="dropdown" href="#">
                        Ação
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Editar", "Edit", new {  id=item.cliente_id })</li>
                        <li>@Html.ActionLink("Detalhar", "Details", new { id=item.cliente_id  })</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Checkins", "ChekinsPorCliente", "Checkin", new {  id=item.cliente_id}, null )</li>

                        <li>@Html.ActionLink("Deletar", "Delete", new {  id=item.cliente_id  })</li>
                    </ul>
             </div>
        </td>
    </tr>
}

</table>
